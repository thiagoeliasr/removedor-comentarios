# Set default charset
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false

[*.php]
indent_style = space
indent_size = 4

[*.blade.php]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 4
insert_final_newline = true

[*.vue]
indent_style = space
indent_size = 4
insert_final_newline = true

[*.scss]
indent_style = space
indent_size = 4
insert_final_newline = true